#include "main.h"

/**
 * _rev - a function that prints a string, in reverse, followed by a new line.
 *
 * Return: returns always (0)
 */



void rev_string(char *STR)
{
char x;

int k = 0;
int j = k - 1;
do {

k++;
} while (STR[j]);

while (j >= k / 2)
{


j--;

}

x = STR[j];
STR [j] = STR [k - j - 1];
STR [k - j - 1] = x;

}

