#include "main.h"

/**
 * function _islower - function that checks for lowercase character
 * Description :function that prints 10 times the alphabet in lowercase
 * Return: Always 0 (Success)
 */


int _islower(int c) (void)
{


printf("enter The value of c");
scanf("%c", &c);

if (c >= 'a' && c <= 'z')
{
return (1);
}
else
{
return (0);
}


}
