#include "main.h"
/**
 * _abs - function that prints the sign of a number
 *@n: number to check
 * Description :function that prints the sign of a number
* Return: +n if number is greater than zero
 *        -n if number is less than zero
 *
 */


int _abs(int num_ber)
{

if (n < 0)
{
return (-n);
}

if (n > 0)
{
